<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:padding="8dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_patient_image"
        android:layout_width="64dp" android:layout_height="64dp"
        android:src="@mipmap/ic_patient"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginStart="8dp">

        <TextView android:id="@+id/item_patient_name" android:textStyle="bold"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/item_patient_email"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/item_patient_weight"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
